<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<VBox alignment="CENTER" spacing="5" style="-fx-padding: 5;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="xyz.bubblesort.calculator.CalculatorController">
    <fx:define>
        <Font fx:id="FONT" size="16" />
        <Font fx:id="FONT_TEXT" size="24" />
    </fx:define>

    <StackPane minHeight="60" alignment="CENTER_RIGHT">
        <Text fx:id="output" font="$FONT_TEXT" styleClass="output" />
    </StackPane>

    <HBox spacing="5" alignment="CENTER">
        <Button text="\%" styleClass="button" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="CE" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="C" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="&lt;-" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="1/x" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="x^2" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="x^1/2" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="/" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="7" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="8" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="9" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="*" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="4" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="5" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="6" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="-" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="1" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="2" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="3" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="+" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="+/-" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="0" minWidth="80" minHeight="60" font="$FONT" onAction="#processNumpad" />
        <Button text="." minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
        <Button text="=" minWidth="80" minHeight="60" font="$FONT" onAction="#processOperator" />
    </HBox>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</VBox>
